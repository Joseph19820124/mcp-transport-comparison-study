{
  "mcpServers": {
    "github-remote-proxy": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://api.githubcopilot.com/mcp/"
      ]
    },
    "custom-sse-proxy": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://your-mcp-server.com/sse",
        "--header",
        "Authorization: Bearer ${AUTH_TOKEN}"
      ],
      "env": {
        "AUTH_TOKEN": "your-access-token"
      }
    }
  }
}